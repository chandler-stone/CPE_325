char stringCharTotal[] = "";


int countLetters(int str) {
    int i = 0;
    int charTotal = 0;
    while (i < sizeof(str)) {
        if (str[i] != 0x00) {
            charTotal++;
        }
        else {

        }
        i++;
    }
}


void main() {
	WDTCTL = WDTPW | WDTHOLD;	// stop watchdog timer

